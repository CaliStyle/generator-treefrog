{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": "<%= answers.srcDir || 'app' %>",
    "outDir": "<%= answers.outDir || 'dist' %>/<%= answers.srcDir || 'app' %>"
  },
  "exclude": [
    "node_modules",
    "typings"
  ],
  "atom": { "rewriteTsconfig": false }
}